#include "School.h"

int School::lastID = 0;

School::School(string name, int nodeID){
	this->name = name;
	this->nodeID = nodeID;
	this->ID = lastID;
	lastID++;
};

void School::setName(int name){
	this->name = name;
}

string School::getName() const{
	return name;
}

void School::addStudent(const Student &student){
	this->students.push_back(student);
}

vector <Student> School::getStudents() const{
	return students;
}

int School::getNumStudents() const{
	return students.size();
}

void School::setNodeID(int nodeID){
	this->nodeID = nodeID;
}

int School::getNodeID() const{
	return nodeID;
}

void School::setID(int id){
	this->ID = id;
}

int School::getID() const{
	return ID;
}

bool School::operator==( const School s) const{
	if (this->name == s.getName())
		return true;
	else
		return false;
}

// TODO - MOSTRAR COORDENADAS GPS DA MORADA PARA CADA ESCOLA E RESPETIVO NODEID ASSOCIADO
ostream& operator<<(ostream& os, const School& school){
	os << "> ID: ";
	os << school.getID();
	os << " | ";
	os << "Name: ";
	os << school.getName();
	os << endl;

	return os;
}
