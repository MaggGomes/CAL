#ifndef STUDENT_H
#define STUDENT_H

#include <string>

using namespace std;

class Student {
	string name;
	int ID;
	BusStop stop;
	School school;

public:
	Student(string name, int ID, const BusStop stop, const School school);
	void setName(string name);
	string getName();
	void setID(int ID);
	int getID();
	void setBusStop(const BusStop stop);
	BusStop getBusStop();
	void setSchool(const School school);
	School getSchool();
};

#endif // STUDENT_H
